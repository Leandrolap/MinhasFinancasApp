<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhasFinancasApp.Views.TelaInicial"
             xmlns:converters="clr-namespace:MinhasFinancasApp.Libraries.Converters"
             Title="TelaInicial"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <converters:TransationValueConverter x:Key="TransationValueConverter"/>
        <converters:TransactionNameConverter x:Key="TransactionNameConverter"/>
        <converters:TransationValueColor x:Key="TransationValueColor"/>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">
        <CollectionView x:Name="CollectionTrasacao" Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem Text="Excluir"
                                               IconImageSource="lixeira.png"
                                               BackgroundColor="LightPink"
                                               Invoked="OnDeleteSwipeItemInvoked"
                                               CommandParameter="{Binding .}"/>
                            </SwipeItems>
                        </SwipeView.LeftItems>
                        <Grid Padding="15" ColumnDefinitions="50,*,Auto">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding .}" Tapped="TapGestureEdit"/>
                            </Grid.GestureRecognizers>

                            <Border HeightRequest="50"
                                        WidthRequest="50"
                                        Stroke="Transparent"
                                        StrokeShape="RoundRectangle 23"
                                        BackgroundColor="Black"
                                        Padding="0"
                                        VerticalOptions="End">

                                <Label Text="{Binding Name, Converter={StaticResource TransactionNameConverter}}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontSize="20"
                                       FontAttributes="Bold"
                                       TextColor="White"
                                       Padding="5"/>
                            </Border>

                            <VerticalStackLayout Grid.Column="1" Spacing="5" Margin="10,0">
                                <Label Text="{Binding Name}" 
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           FontSize="18"/>

                                <Label Text="{Binding ., Converter={StaticResource TransationValueConverter}}" 
                                           TextColor="{Binding ., Converter={StaticResource TransationValueColor}}"
                                           FontSize="20"/>
                            </VerticalStackLayout>

                            <Label Grid.Column="2"
                                       VerticalOptions="End"
                                       Text="{Binding Date, StringFormat='{0:dd/MM/yyyy}'}"
                                       TextColor="White"/>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <!--Popup de valores-->
    <Border BackgroundColor="Black"
                Stroke="Transparent"
                Padding="20"
                StrokeShape="RoundRectangle 30"
                AbsoluteLayout.LayoutBounds="0.5,1,100,25"
            Grid.Row="1">

        <Grid ColumnDefinitions="*,80" RowDefinitions="Auto, Auto, 30, Auto, Auto" Padding="10">
            <Label Text="Saldo"
                       TextColor="White"
                       FontSize="18"/>

            <Label Grid.Row="1"
                       TextColor="White"
                       FontSize="27"
                       x:Name="LblSaldo"/>

            <Button Text="+"
                        Clicked="OnclickAdd"
                        Grid.Column="1"
                        Grid.RowSpan="2"
                        FontSize="48"
                        Padding="0"
                        CornerRadius="50"
                        WidthRequest="70"
                        VerticalOptions="CenterAndExpand"
                        TextColor="Black"
                        BackgroundColor="White"/>

            <Label Text="Receitas"
                       Grid.Row="3"
                       TextColor="White"
                       FontSize="15"/>

            <Label Grid.Row="4"
                       TextColor="White"
                       FontSize="12"
                       x:Name="LblReceitas"/>

            <Label Text="Despesas" 
                       Grid.Row="3"
                       Grid.Column="1"
                       TextColor="White"
                       FontSize="15"/>

            <Label Grid.Row="4"
                       Grid.Column="1"
                       TextColor="White"
                       FontSize="12"
                       x:Name="LblDespesas"/>
        </Grid>
    </Border>
    
    </Grid>
    
</ContentPage>