<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhasFinancasApp.Views.CadastroAdd"
             Title="CadastroAdd">

    <Grid>
        <VerticalStackLayout Padding="15" Spacing="20">
            <Border Margin="15"
                    Padding="15"
                    BackgroundColor="Black"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 30">

                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           HorizontalOptions="CenterAndExpand"
                           Text="NOVA TRANSAÇÃO"
                           TextColor="White"
                           VerticalOptions="Center"/>

                    <Image Grid.Row="0"
                           Grid.Column="1"
                           HorizontalOptions="Center"
                           Source="fechar.png"
                           WidthRequest="17">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTappedImage"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </Border>
            
            <Grid ColumnDefinitions="*,*" Margin="30,0">
                <RadioButton IsChecked="True" 
                             Content="Receita"
                             x:Name="RadioIncome"
                             TextColor="White"/>
                
                <RadioButton Content="Despesa"
                             Grid.Column="1"
                             HorizontalOptions="End"
                             x:Name="RadioExpense"
                             TextColor="White"/>
            </Grid>

            <Frame CornerRadius="50" 
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   HeightRequest="50"
                   Padding="0">

                <Entry Placeholder="Nome" 
                       Margin="15,0"
                       x:Name="EntryName"
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       VerticalOptions="Center"/>
            </Frame>

            <Frame CornerRadius="50" 
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   HeightRequest="50"
                   Padding="0">

                <Entry Placeholder="Valor"
                       Margin="15,0"
                       x:Name="EntryValue"
                       PlaceholderColor="Gray"
                       VerticalOptions="Center"
                       TextColor="Black"
                       Keyboard="Numeric"/>
            </Frame>

            <DatePicker Margin="15,0"
                        x:Name="DatePickerDate"
                        TextColor="White"
                        HorizontalOptions="Center"
                        FontSize="17"/>

            <Label TextColor="#FFEA1414" 
                   x:Name="LabelErro"
                   IsVisible="False"
                   Margin="30,30"/>
        </VerticalStackLayout>

        <Button Text="Salvar"
                Margin="20"
                BackgroundColor="Black"
                Clicked="OnClickedSalvar"
                VerticalOptions="End"
                TextColor="White"/>
    </Grid>
</ContentPage>