<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhasFinancasApp.Views.CadastroAdd"
             Title="CadastroAdd">

    <Grid>
        <VerticalStackLayout Padding="15" Spacing="20">
            <Border Margin="15"
                    Padding="15"
                    BackgroundColor="Black"
                    Stroke="Transparent"
                    StrokeShape="RoundRectangle 30">

                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto">
                    <Label Grid.Row="0"
                           Grid.Column="0"
                           HorizontalOptions="CenterAndExpand"
                           Text="NOVA TRANSAÇÃO"
                           TextColor="White"
                           VerticalOptions="Center"/>

                    <Image Grid.Row="0"
                           Grid.Column="1"
                           HorizontalOptions="Center"
                           Source="fechar.png"
                           WidthRequest="17">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnTappedImage"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
            </Border>
            
            <Grid ColumnDefinitions="*,*" Margin="30,0">
                <RadioButton IsChecked="True" 
                             Content="Receita"
                             x:Name="RadioIncome"
                             TextColor="White"/>
                
                <RadioButton Content="Despesa"
                             Grid.Column="1"
                             HorizontalOptions="End"
                             x:Name="RadioExpense"
                             TextColor="White"/>
            </Grid>

            <Frame CornerRadius="8"
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   Padding="1">

                <Entry Placeholder="Nome" 
                       x:Name="EntryName"
                       PlaceholderColor="Gray"
                       TextColor="Black"
                       VerticalOptions="Center"/>
            </Frame>

            <Frame CornerRadius="8" 
                   BackgroundColor="White"
                   BorderColor="Transparent"
                   Padding="1">

                <Entry Placeholder="Valor"
                       x:Name="EntryValue"
                       PlaceholderColor="Gray"
                       VerticalOptions="Center"
                       TextColor="Black"
                       Keyboard="Numeric"/>
            </Frame>

            <Frame HorizontalOptions="Center">
                <StackLayout>
                    <Label Text="Selecione a data"
                           HorizontalOptions="Center"
                           TextColor="Black"
                           FontSize="12"/>
                    
                    <DatePicker Margin="15,0"
                                x:Name="DatePickerDate"
                                TextColor="Black"
                                HorizontalOptions="Center"
                                FontSize="17"
                                Format="dd/MM/yyyy"/>
                </StackLayout>
            </Frame>
            
            <Label TextColor="#FFEA1414" 
                   x:Name="LabelErro"
                   IsVisible="False"
                   Margin="30,30"/>
        </VerticalStackLayout>

        <Button Text="SALVAR"
                Margin="20"
                BackgroundColor="Black"
                Clicked="OnClickedSalvar"
                VerticalOptions="End"
                TextColor="White"/>
    </Grid>
</ContentPage>